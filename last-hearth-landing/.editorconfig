# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180
tab_width = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{*.yml,*.yaml}]
indent_size = 2
tab_width = 2
